// Prisma schema for mangas-dashboard
// Run: npx prisma migrate dev --name init

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  USER
  EDITOR
  ADMIN
}

enum MangaStatus {
  ONGOING
  COMPLETED
  HIATUS
}

enum AgeRating {
  EVERYONE
  TEEN
  MATURE
  ADULT
}

enum RequestStatus {
  PENDING
  PROCESSED
  CANCELLED
}

enum LibraryStatus {
  READING
  COMPLETED
  ON_HOLD
  DROPPED
  PLAN_TO_READ
}

enum InteractionType {
  VIEW
  LIKE
  FAVORITE
  LIBRARY_UPDATE // New type to track when status changes
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  role         Role     @default(USER)
  isActive     Boolean  @default(true)
  lastLogin    DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  interactions UserMangaInteraction[]
  refreshTokens RefreshToken[]
  deletionRequests UserDeletionRequest[]
  readingProgress ReadingProgress[]
  settings     UserSettings?
  ratings      Rating[]
  notifications Notification[]
  
  // Moderación (Solo Admin)
  isBanned     Boolean  @default(false)
  banReason    String?
  adminNote    String?
  
  // Contenido creado
  mangas       Manga[]
  chapters     Chapter[]
  categories   Category[]
  sources      Source[]
  
  // Sincronización y Auditoría
  devices      Device[]
  auditLogs    AuditLog[]
}

model Device {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  fcmToken     String?  @unique
  deviceModel  String?
  osVersion    String?
  lastSyncAt   DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
}

model AuditLog {
  id          String   @id @default(cuid())
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  action      String   // e.g., "MANGA_UPDATE", "CHAPTER_UPLOAD"
  entityType  String   // e.g., "Manga", "Chapter"
  entityId    String
  details     Json?
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([entityType, entityId])
}

model UserSettings {
  id                String   @id @default(cuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  readingMode       String   @default("VERTICAL")
  theme             String   @default("DARK")
  incognitoMode     Boolean  @default(false)
  notificationsEnabled Boolean @default(true)
  language          String   @default("es")
  updatedAt         DateTime @updatedAt
}

model UserDeletionRequest {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  reason    String?
  status    RequestStatus @default(PENDING)
  createdAt DateTime @default(now())
  processedAt DateTime?
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
  revokedAt DateTime?
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  slug      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  mangas    MangaCategory[]

  // Propiedad
  creator      User?    @relation(fields: [creatorId], references: [id])
  creatorId    String?
}

model Manga {
  id          String          @id @default(cuid())
  title       String
  slug        String          @unique
  description String?
  coverUrl    String?
  author      String?
  status      MangaStatus     @default(ONGOING)
  ageRating   AgeRating       @default(EVERYONE)
  isModerated Boolean         @default(false)
  isAdult     Boolean         @default(false)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  // Relación opcional a Source
  source       Source?  @relation(fields: [sourceId], references: [id])
  sourceId     String?

  categories  MangaCategory[]
  chapters    Chapter[]
  stats       Stat?
  interactions UserMangaInteraction[]
  readingProgress ReadingProgress[]
  ratings      Rating[]

  // Propiedad
  creator      User?    @relation(fields: [creatorId], references: [id])
  creatorId    String?

  // Flags Dashboard
  isTrending   Boolean  @default(false)
  isFeatured   Boolean  @default(false)
  
  // Visibilidad (Solo Admin/Editor)
  isHidden     Boolean  @default(false)
  
  // Soft Delete
  deletedAt    DateTime?
}

model MangaCategory {
  manga      Manga    @relation(fields: [mangaId], references: [id], onDelete: Cascade)
  mangaId    String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId String

  @@id([mangaId, categoryId])
}

model Chapter {
  id          String      @id @default(cuid())
  manga       Manga       @relation(fields: [mangaId], references: [id], onDelete: Cascade)
  mangaId     String
  number      Decimal
  title       String?
  sipnosis    String?
  url_capitulo String?
  releaseDate DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  pages       ChapterPage[]
  readingProgress ReadingProgress[]

  // Propiedad
  creator      User?    @relation(fields: [creatorId], references: [id])
  creatorId    String?

  // Soft Delete
  deletedAt    DateTime?
}

model ChapterPage {
  id         String   @id @default(cuid())
  chapter    Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  chapterId  String
  pageNumber Int
  imageUrl   String

  @@unique([chapterId, pageNumber])
}

model Stat {
  id              String   @id @default(cuid())
  manga           Manga    @relation(fields: [mangaId], references: [id], onDelete: Cascade)
  mangaId         String   @unique
  viewsCount      Int      @default(0)
  likesCount      Int      @default(0)
  favoritesCount  Int      @default(0)
  updatedAt       DateTime @updatedAt
}

model UserMangaInteraction {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  manga     Manga    @relation(fields: [mangaId], references: [id], onDelete: Cascade)
  mangaId   String
  type      InteractionType
  
  // Para biblioteca personalizada
  status    LibraryStatus? 
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  @@unique([userId, mangaId])
}

model Rating {
  id        String   @id @default(cuid())
  value     Int      
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  mangaId   String
  manga     Manga    @relation(fields: [mangaId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  @@unique([userId, mangaId])
}

model ReadingProgress {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  mangaId     String
  manga       Manga    @relation(fields: [mangaId], references: [id], onDelete: Cascade)
  chapterId   String
  chapter     Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  
  lastPage    Int      @default(0)
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, chapterId])
  @@index([userId, mangaId])
  
  // Soft Delete
  deletedAt   DateTime?
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  isRead    Boolean  @default(false)
  link      String?  // Ej: /manga/slug/chapter/1
  createdAt DateTime @default(now())
}

model Source {
  id          String   @id @default(cuid())
  name        String   @unique
  baseUrl     String   @unique
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  mangas      Manga[]

  // Propiedad
  creator      User?    @relation(fields: [creatorId], references: [id])
  creatorId    String?
}

model GlobalSettings {
  id                String   @id @default("system_config")
  maintenanceMode   Boolean  @default(false)
  allowRegistration Boolean  @default(true)
  announcement      String?
  updatedAt         DateTime @updatedAt
}
